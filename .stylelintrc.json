{
  "extends": ["stylelint-config-standard"],
  "ignoreFiles": ["dist/**", "coverage/**"],
  "plugins": ["stylelint-selector-bem-pattern"],
  "rules": {
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["corner-shape"]
      }
    ],
    "plugin/selector-bem-pattern": {
      "preset": "bem"
    },
    "selector-class-pattern": null
  }
}
